{
  "name": "TabLimiter",
  "description": "Limits your tabs to help prevent too-many-tabs syndrome.",
  "version": "0.0.1",
  "author": "GrayFalls",
  "manifest_version": 2,
  "icons": {
    "48": "48x48.png",
    "128": "128x128.png"
  },
  "browser_action": {
    "default_icon": {
      "19": "19x19.png",
      "38": "38x38.png"
    },
    "default_title": "Tab Limiter",
    "default_popup": "options.html"
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "permissions": ["tabs"]
}
